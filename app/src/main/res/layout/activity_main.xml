<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_service_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Stopped"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_start_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start"
            app:layout_constraintTop_toBottomOf="@id/tv_service_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_get_state"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_get_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ping"
            app:layout_constraintTop_toTopOf="@id/btn_start_stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_start_stop" />

        <Button
            android:id="@+id/btn_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Show Configuration"
            app:layout_constraintTop_toBottomOf="@id/btn_start_stop" />

        <LinearLayout
            android:id="@+id/ll_hidden_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_expand">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Mode:"
                android:layout_marginTop="10dp"/>

            <RadioGroup
                android:id="@+id/rg_work_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:id="@+id/rb_work_always" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Always"/>
                <RadioButton android:id="@+id/rb_work_portrait" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Portrait Only"/>
                <RadioButton android:id="@+id/rb_work_landscape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Landscape Only"/>
                <RadioButton android:id="@+id/rb_work_unlock" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="On Unlock"/>
            </RadioGroup>

            <EditText android:id="@+id/et_sensor_value_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Sensor Threshold 1" android:inputType="number"/>
            <EditText android:id="@+id/et_brightness_value_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Brightness 1" android:inputType="number"/>
            <EditText android:id="@+id/et_sensor_value_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Sensor Threshold 2" android:inputType="number"/>
            <EditText android:id="@+id/et_brightness_value_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Brightness 2" android:inputType="number"/>
            <EditText android:id="@+id/et_sensor_value_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Sensor Threshold 3" android:inputType="number"/>
            <EditText android:id="@+id/et_brightness_value_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Brightness 3" android:inputType="number"/>
            <EditText android:id="@+id/et_sensor_value_4" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Sensor Threshold 4" android:inputType="number"/>
            <EditText android:id="@+id/et_brightness_value_4" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Brightness 4" android:inputType="number"/>

            <Button
                android:id="@+id/btn_save_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Settings" />

            <TextView
                android:id="@+id/tv_dontkillmyapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Need help? Visit dontkillmyapp.com"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
